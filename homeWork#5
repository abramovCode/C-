using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string firstName = "Сакутин";
            string lastName = "Роман";

            Console.WriteLine($"Имя: {firstName}, Фамилия: {lastName}.");

            string correctFirstName = lastName;
            string correctLastName = firstName;

            Console.WriteLine($"Но на самом деле имя: {correctFirstName}, а фамилия: {correctLastName}.");
        }
    }
}
