using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int gold;
            int crystall;
            int crystallUnitPrice = 10;

            Console.WriteLine($"Добро пожаловать в магазин кристаллов! Цена одного " +
                $"кристалла {crystallUnitPrice} золота.");
            Console.Write("Сколько у Вас золота?");
            gold = Convert.ToInt32(Console.ReadLine());
            Console.Write("Сколько кристаллов Вам необходимо?");
            crystall = Convert.ToInt32(Console.ReadLine());

            gold -= crystall * crystallUnitPrice;
            Console.WriteLine($"Теперь у вас {crystall} кристаллов и {gold} золота.");
        }
    }
}
